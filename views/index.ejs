<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Crop and Frame</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <link rel="stylesheet" href="/css/croppie.css">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/croppie.min.js"></script>
</head>

<body>
    <div class="container" style="margin-top: 40px;">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <h1 class="text-center">
                <span class="fa fa-crop"></span> Crop and Frame</h1>
            <hr>
            <div class="row">
                <div class="col-xs-4 text-center">
                    <div class="steplabel" id="indicator-page-1">1</div> Choose
                </div>
                <div class="col-xs-4 text-center">
                    <div class="steplabel" id="indicator-page-2">2</div> Crop
                </div>
                <div class="col-xs-4 text-center">
                    <div class="steplabel" id="indicator-page-3">3</div> Save
                </div>
            </div>
            <hr>
            <div id="page-1" class="text-center">
                <div class="input-group">
                    <input type="text" name="showSrc" id="showSrcField" class="form-control" disabled="disabled" ng-value="file.name">
                    <span class="input-group-btn">
                        <label class="btn btn-default">
                            Choose Image
                            <input type="file" name="fileField" class="hidden" id="fileField" accept="image/*">
                        </label>
                    </span>
                </div>
            </div>
            <div id="page-2" class="text-center">
                <div id="cropping"></div>
            </div>
            <div id="page-3" class="text-center">
                <p>
                    <img id="croppedImg">
                </p>
            </div>
            <hr>
            <button type="button" class="btn btn-success btn-lg btn-block" id="nextBtn">Next</button>
            <button type="button" class="btn btn-default btn-lg btn-block" id="restartBtn">Start Over</button>
        </div>
    </div>
    <script src="/js/cropnframe.js"></script>
</body>

</html>