<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Crop and Frame</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/angular.min.js"></script>
</head>

<body ng-app="cropnframe" ng-controller="cropnframe">
    <div class="container" style="margin-top: 40px;">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <h1 class="text-center"><span class="fa fa-crop"></span> Crop and Frame</h1>
            <hr>
            <div class="row">
                <div class="col-xs-4 text-center">
                    <div class="steplabel" ng-class="{'steplabel-now':step==1,'steplabel-prev':step>1}">1</div> Choose
                </div>
                <div class="col-xs-4 text-center">
                    <div class="steplabel" ng-class="{'steplabel-prev':step>2,'steplabel-now':step==2,'steplabel-next':step<2}">2</div> Crop
                </div>
                <div class="col-xs-4 text-center">
                    <div class="steplabel" ng-class="{'steplabel-next':step<3,'steplabel-now':step==3}">3</div> Save
                </div>
            </div>
            <hr>
            <div id="content-choose" ng-hide="step != 1" class="text-center">
                <div class="input-group">
                    <input type="text" name="showSrc" id="showSrcField" class="form-control" disabled="disabled" ng-value="file.name">
                    <span class="input-group-btn">
                        <label class="btn btn-default">
                            Choose Image<input type="file" name="fileField" class="hidden" id="fileField" accept="image/*" ng-change="changeImg()" ng-model="file">
                        </label>
                    </span>
                </div>
            </div>
            <div id="content-crop" ng-hide="step != 2" class="text-center">
                <p><img id="cropping" src="" width="300" height="300"></p>
            </div>
            <div id="content-save" ng-hide="step != 3" class="text-center">
                <p><img src="https://image.flaticon.com/teams/slug/freepik.jpg" width="300" height="300"></p>
            </div>
            <hr>
            <button type="button" class="btn btn-success btn-lg btn-block" ng-click="next()" ng-hide="step==3">Next</button>
            <button type="button" class="btn btn-default btn-lg btn-block" ng-click="restart()" ng-hide="step==1">Start Over</button>
        </div>
    </div>
    <script src="/js/cropnframe.js"></script>
</body>

</html>